{
    "manifest_version": 3,
    "name": "Open Tabs",
    "description": "This extension counts the number of open tabs in the window and warns the user if they exceed the maximum limit.",
    "version": "1.0",
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "popup.html"
      },
      "host_permissions": [
        "https://developer.chrome.com/*"
      ],
      "permissions": [
        "activeTab",
        "tabs"
      ]
  }



  